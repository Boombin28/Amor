---
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { withBasePath } from "../../utils/withBase";

export async function getStaticPaths() {
  const posts = await getCollection("journal");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"journal">;
}

const { post } = Astro.props;
const { Content } = await render(post);
const published = post.data.date.toLocaleDateString("zh-CN", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
const base = import.meta.env.BASE_URL;
const withBase = (path: string) => withBasePath(base, path);
const toAsset = (path: string) => (path.startsWith("/") ? withBase(path) : path);
const cover = post.data.cover ?? "/journal/cover-default.svg";
const location = post.data.location ? ` · ${post.data.location}` : "";
---

<BaseLayout title={`${post.data.title} · Amor's Journal`} description={post.data.excerpt}>
  <article class="article-shell">
    <a class="text-link" href={withBase("/writings")}>← 返回文章归档</a>
    <header>
      <div class="article-meta">{published} · {post.data.readingTime}{location}</div>
      <h1 class="article-title">{post.data.title}</h1>
      <p class="article-summary">{post.data.excerpt}</p>
      <div class="tag-row">
        {post.data.tags.join(" · ")}
      </div>
    </header>
    <figure class="article-cover">
      <img src={toAsset(cover)} alt={post.data.title} />
    </figure>
    <div class="prose">
      <Content />
    </div>
  </article>
</BaseLayout>
